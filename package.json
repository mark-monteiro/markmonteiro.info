{
  "name": "markmonteiro.info",
  "version": "1.0.0",
  "description": "Mark Monteiro's personal website",
  "scripts": {
    "build": "bundle exec jekyll build",
    "build:production": "JEKYLL_ENV=production bash -c 'npm run build'",
    "start": "bundle exec jekyll serve --incremental --livereload",
    "test": "npm run test:stylelint && npm run test:htmlproofer",
    "test:stylelint": "stylelint _sass/**/*.scss",
    "test:htmlproofer": "bundle exec rake htmlproofer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mark-monteiro/markmonteiro.info.git"
  },
  "author": "Mark Monteiro",
  "license": "SEE LICENSE IN LICENSE.",
  "bugs": {
    "url": "https://github.com/mark-monteiro/markmonteiro.info/issues"
  },
  "homepage": "https://github.com/mark-monteiro/markmonteiro.info#readme",
  "devDependencies": {
    "bootstrap-sass": "^3.4.3",
    "stylelint": "^14.14.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-scss": "^4.3.0"
  }
}
